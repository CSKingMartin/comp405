      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
  <!--Staring Navbar Here -->
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!--this allows for navigation w/small screens -->
          <a class="navbar-brand">Portrait</a>
        </div>

        <!-- end header here -->
        <div class="collapse navbar-collapse" id="navbar">
          <ul class ="nav navbar-nav navbar-right"> <!-- unordered list -->
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
          </ul>
           
        </div><!--/.navbar-collapse -->
      </div>
    </nav>

    <!-- Main jumbotron for a primary marketing message or call to action -->

    
    <div class="container">
    	
    	<div class="row">
    		<div class="col-md-12">
	    		<h1>Edit Post</h1>

				<%=form_for :post, url: posts_path(@post), method: :patch do |f| %>

					<% if @post.errors.any? %>
						<div id="error_explaination">
							<h2>
								<%= pluralize(@post.errors.count, "error") %> in saving your Post:
							</h2>
							<ul>
								<% @post.errors.full_messages.each do |msg| %>
								<li> <%= msg %> </li>
								<% end %>
							</ul>
						</div>
					<% end %>
					<p>
						<%= f.label :title %><br>
						<%= f.text_field :title %>
					</p>

					<p> 
						<%= f.label :text %><br>
						<%= f.text_field :text %>
					</p>

					<p> 
					<%= button_tag(type: 'submit', class: "btn btn-success") do %>
 						<i class="icon-ok icon-white"></i> Save
 						<% end %>
					</p>

				<% end %>

				<%= link_to 'Go Back', posts_path, class: "btn btn-large btn-danger" %>
			</div>
		</div>
    </div>

    

     <hr>

      <footer>
        <p>&copy; 2016 Conner Wells, All Rights Reserved</p>
      </footer>
    </div> <!-- /container -->


